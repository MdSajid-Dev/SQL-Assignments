-- Joins
/* Employees, Departments */

CREATE TABLE Employees (
    emp_id INT PRIMARY KEY,
    name VARCHAR(50),
    dept_id INT
);

INSERT INTO Employees (emp_id, name, dept_id) VALUES
(1, 'Ravi', 101),
(2, 'Priya', 102),
(3, 'Karan', 101),
(4, 'Anjali', 103),
(5, 'Manish', NULL); -- Manish does not belong to any department initially

CREATE TABLE Departments (
    dept_id INT PRIMARY KEY,
    dept_name VARCHAR(50)
);

INSERT INTO Departments (dept_id, dept_name) VALUES
(101, 'IT'),
(102, 'HR'),
(103, 'Finance'),
(104, 'Marketing');


-- 1. Find employees who are in the ‘IT’ department.

SELECT e.emp_id, e.name, d.dept_name
FROM Employees e
INNER JOIN Departments d ON e.dept_id = d.dept_id
WHERE d.dept_name = 'IT';

-- 3. List departments with no employees.

SELECT d.dept_id, d.dept_name
FROM Departments d
LEFT JOIN Employees e ON d.dept_id = e.dept_id
WHERE e.emp_id IS NULL;

-- 4. Show each employee’s name along with every department they could potentially work in.

SELECT e.name, d.dept_name
FROM Employees e
CROSS JOIN Departments d
ORDER BY e.name, d.dept_name;

-- 5. Get all employees and all departments (even if no match).

SELECT e.name, d.dept_name
FROM Employees e
FULL OUTER JOIN Departments d ON e.dept_id = d.dept_id;

-- 6. Find employees who do not belong to any department.

SELECT emp_id, name
FROM Employees
WHERE dept_id IS NULL;
